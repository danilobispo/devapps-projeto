<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:id="@+id/card_pet"
    android:background="@color/white"
    >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_evento_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/card_toolbar"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@color/drawer_primary_color">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tituloEvento"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18dp"
                android:text="Evento x"
                />
        </android.support.v7.widget.Toolbar>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ctlEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/card_toolbar"
            android:paddingBottom="16dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tituloDataEvento"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="DATA"
                android:textSize="13dp"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintLeft_toLeftOf="parent"

                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/dataEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_medium"
                android:text="data"
                android:textSize="13dp"
                app:layout_constraintTop_toBottomOf="@id/tituloDataEvento"
                app:layout_constraintStart_toStartOf="@id/tituloDataEvento"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tituloHoraEvento"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="HORA"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13dp"
                app:layout_constraintStart_toEndOf="@+id/tituloDataEvento"
                android:layout_marginStart="212dp"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/horaEvento"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_medium"
                android:text="hora"
                android:textSize="13dp"
                app:layout_constraintTop_toBottomOf="@+id/tituloHoraEvento"
                app:layout_constraintStart_toStartOf="@id/tituloHoraEvento" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tituloLocalEvento"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="LOCAL"
                android:textSize="13dp"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@id/dataEvento"
                app:layout_constraintStart_toStartOf="@id/dataEvento"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/localEvento"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_medium"
                android:text="localEvento"
                android:textSize="13dp"
                app:layout_constraintTop_toBottomOf="@+id/tituloLocalEvento"
                app:layout_constraintStart_toStartOf="@id/tituloDataEvento" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tituloInformacoesEvento"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorPrimaryDark"
                android:text="INFORMAÇÕES"
                android:textSize="13dp"
                app:layout_constraintTop_toBottomOf="@id/localEvento"
                app:layout_constraintStart_toStartOf="@id/localEvento"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/informacoesEvento"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_medium"
                android:text="informacoes"
                android:textSize="13dp"
                app:layout_constraintTop_toBottomOf="@id/tituloInformacoesEvento"
                app:layout_constraintStart_toStartOf="@id/tituloInformacoesEvento" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
