<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerMenuHeader"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center|left">

    <ImageView
        android:id="@+id/drawerMenuHeader_itemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_email_black_18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drawerMenuHeader_itemNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Menu Item"
        android:textColor="@color/cor_texto"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/drawerMenuHeader_itemIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.516" />

    <ImageView
        android:id="@+id/drawerMenuHeader_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/drawerMenuHeader_itemIcon"
        app:layout_constraintTop_toTopOf="@+id/drawerMenuHeader_itemIcon" />

</android.support.constraint.ConstraintLayout>