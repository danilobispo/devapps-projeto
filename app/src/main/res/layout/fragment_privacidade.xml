<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/background_privacidade_fa"
        android:orientation="vertical"
        tools:context="com.example.hal_9000.projetodevapps.PrivacidadeFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/str_notificacoes"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbAtivarNotificacoesChat"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_ativar_notifica_es_de_chat" />

        <CheckBox
            android:id="@+id/cbAtivarNotificacoesRecordacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_ativar_notif_recordacao" />

        <CheckBox
            android:id="@+id/cbAtivarNotificacoesEventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_ativar_notifica_es_de_eventos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/str_aviso_notificacoes_chat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/str_aviso_notif_record" />

        <TextView
            android:id="@+id/tvAvisoNotifEventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/str_aviso_notif_eventos" />
    </LinearLayout>

    <Button
        android:id="@+id/btSalvarAlteracoes"
        android:background="@color/grey_bd"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="@string/str_salvar_alteracoes" />
</RelativeLayout>
