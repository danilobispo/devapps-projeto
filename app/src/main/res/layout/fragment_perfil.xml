<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/profile_photo"
            android:layout_width="112dp"
            android:layout_height="112dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_photo"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:textColor="@color/theme_gray_43"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_label_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_label_name"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/them_light_blue"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_label_full_name"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:textColor="@color/theme_gray_75"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_label_idade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_full_name"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/them_light_blue"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_idade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_label_idade"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:textColor="@color/theme_gray_75"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_idade"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/them_light_blue"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_label_email"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:textColor="@color/theme_gray_75"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_label_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_email"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/them_light_blue"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_label_local"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:textColor="@color/theme_gray_75"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_label_endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_local"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/them_light_blue"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_label_endereco"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:textColor="@color/theme_gray_75"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_label_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_endereco"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/them_light_blue"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_label_telefone"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:textColor="@color/theme_gray_75"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_label_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_telefone"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/them_light_blue"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_label_username"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:textColor="@color/theme_gray_75"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_label_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_username"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/them_light_blue"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_label_history"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:textColor="@color/theme_gray_75"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_history"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/profile_btn_chat"
                android:layout_width="148dp"
                android:layout_height="40dp"
                android:text="@string/chat"
                android:textSize="12sp"
                android:textColor="@color/theme_gray_75"
                android:fontFamily="@font/roboto"
                android:backgroundTint="@color/btn_blue"
                app:layout_constraintEnd_toStartOf="@id/profile_btn_histories"
                app:layout_constraintStart_toStartOf="parent"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/profile_btn_histories"
                android:layout_width="148dp"
                android:layout_height="40dp"
                android:text="@string/hitories"
                android:textSize="12sp"
                android:textColor="@color/theme_gray_75"
                android:fontFamily="@font/roboto"
                android:backgroundTint="@color/btn_blue"
                app:layout_constraintStart_toEndOf="@id/profile_btn_chat"
                app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>
